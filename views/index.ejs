<%- include('partials/htmlheader.ejs') %>
<body>
  <main class="container">
    <h1 id="seniorName">John Tan</h1>

    <div class="button-row">
      <!-- Check-in section -->
      <div class="checkin-section">
        <h2>Check-In</h2>
        <button id="checkInBtn" class="checkin-btn">I'm OK</button>
      </div>

      <!-- Virtual Meeting section -->
      <div class="meeting-section">
        <h2>Virtual Meeting</h2>
        <div class="meeting-buttons">
          <a href="/arrange" class="meeting-btn">Arrange</a>
          <a href="/join" class="meeting-btn">Join</a>
        </div>
      </div>
    </div>
  </main>

  <!-- Bottom Navigation Bar -->
  <nav class="bottom-bar">
    <button class="emergency-btn">Emergency</button>
    <button class="settings-btn" onclick="openCaregiver()">Settings</button>
  </nav>

  <!-- Settings (Access Code) Form -->
<div class="form-popup" id="settingsForm">
  <form action="/caregiver-login" class="form-container" method="POST">
    <h2>Caregiver Access</h2>

    <input type="password" placeholder="Enter Assess Code" name="code" required>

    <button type="submit" class="btn">Unlock</button>
    <button type="button" class="btn cancel" onclick="closeCaregiver()">Close</button>
  </form>
</div>

</body>
<%- include('partials/htmlfooter.ejs') %>
