<%- include('partials/htmlheader.ejs') %>
<body>
  <main class="container">
    <h1 id="seniorName">John Tan</h1>

    <div class="button-row">
      <!-- Check-in section -->
      <div class="checkin-section">
        <h2>Check-In</h2>
        <button id="checkInBtn" class="checkin-btn">I'm OK</button>
      </div>

      <!-- Virtual Meeting section -->
      <div class="meeting-section">
        <h2>Virtual Meeting</h2>
        <div class="meeting-buttons">
          <a href="/arrange" class="meeting-btn">Arrange</a>
          <a href="/join" class="meeting-btn">Join</a>
        </div>
      </div>
    </div>
  </main>

  <!-- Bottom Navigation Bar -->
  <nav class="bottom-bar">
    <button class="emergency-btn">Emergency</button>
    <button class="settings-btn" onclick="openCaregiver()">Settings</button>
  </nav>

  <!-- Settings Popup -->
  <div class="form-popup" id="settingsForm">
    <div class="form-container">
      <h2>Settings</h2>

      <!-- Change Name Section -->
      <label for="newName"><b>Change Name</b></label>
      <input type="text" id="newName" placeholder="Enter your name">
      <button type="button" class="btn" onclick="changeName()">Save Name</button>
      <hr>

      <!-- Caregiver Access -->
      <h3>Caregiver Access</h3>
      <form action="/caregiver-login" method="POST">
        <input type="password" placeholder="Enter Access Code" name="code" required>
        <button type="submit" class="btn">Unlock</button>
      </form>

      <button type="button" class="btn cancel" onclick="closeCaregiver()">Close</button>
    </div>
  </div>

  <script>
    // Load stored name (localStorage) on page load 
    document.addEventListener("DOMContentLoaded", () => {
      const storedName = localStorage.getItem("seniorName");
      if (storedName) {
        document.getElementById("seniorName").innerText = storedName;
      }
    });

    // Change name function 
    function changeName() {
      const newName = document.getElementById("newName").value.trim();
      if (!newName) {
        alert("Please enter a name first!");
        return;
      }
      document.getElementById("seniorName").innerText = newName;
      localStorage.setItem("seniorName", newName);
      alert("Name updated to " + newName);
      document.getElementById("newName").value = "";
    }
  </script>
</body>
<%- include('partials/htmlfooter.ejs') %>
