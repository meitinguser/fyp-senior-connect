
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Caregiver Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 25px;
    }

    #summaryCards {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }

    .card {
      flex: 1;
      background: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: left;
    }

    .card h2 {
      margin: 5px 0;
    }

    #elderlyTable {
      width: 100%;
      background: white;
      border-radius: 10px;
      border-collapse: collapse;
      overflow: hidden;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    #elderlyTable th,
    #elderlyTable td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    #elderlyTable th {
      background: #002d62;
      color: white;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .status-ok {
      color: green;
      font-weight: bold;
    }

    .status-missed {
      color: red;
      font-weight: bold;
    }

    #filterRow {
      margin: 15px 0;
      display: flex;
      justify-content: flex-end;
      gap: 15px;
    }

    /* Language dropdown styling */
    .language-select {
      padding: 6px 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background: white;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
    }

    .language-select:hover {
      border-color:#002d62;
    }

    .language-select:focus {
      outline: none;
      border-color: #002d62;
      box-shadow: 0 0 5px rgba(0, 45, 98, 0.3);
    }

    .language-select.updating {
      background: #f0f0f0;
      cursor: wait;
    }

    .language-select.success {
      border-color: green;
      background: #f0f0f0;
    }

    .language-select.error {
      border-color: red;
      background: #fff0f0;
    }

    /* Status message styling */
    .update-status {
      font-size: 12px;
      margin-top: 4px;
      font-style: italic;
    }
    
    .update-status.success {
      color: green;
    }

    .update-status.error {
      color: red;
    }

  </style>
</head>

<body>
  <h1>Caregiver Dashboard</h1>

  <!-- Summary Cards -->
  <div id="summaryCards">
    <div class="card">
      <h2 id="totalElderly">0</h2>
      <p>Elderlies Under My Care</p>
    </div>
    <div class="card">
      <h2 id="checkedInToday">0</h2>
      <p>Checked In Today</p>
    </div>
    <div class="card">
      <h2 id="missedToday">0</h2>
      <p>Missed Today</p>
    </div>
  </div>

  <!-- Filters -->
  <div id="filterRow">
    <span>Caregiver:
      <select id="caregiverSelect">
        <option value="all">All Caregivers</option>
      </select>
    </span>

    <span>Senior:
      <select id="filterSelect">
        <option value="all">All Seniors</option>
        <option value="checked">Checked In Today</option>
        <option value="missed-morning">Missed (Morning)</option>
        <option value="missed-night">Missed (Night)</option>
      </select>
    </span>
  </div>

  <!-- Table -->
  <table id="elderlyTable">
    <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Condition</th>
        <th>Language Preference</th>
        <th>Caregiver</th>
        <th>Check-In Status</th>
        <th>Pause/Active</th>
      </tr>
    </thead>
    <tbody id="elderlyBody">
      <!-- Filled by JS -->
    </tbody>
  </table>

  <script>
    let elderlyData = [];
    let checkinLogs = [];

    // Define check-in ranges
    const MORNING_RANGE = ["06:00", "12:00"];
    const NIGHT_RANGE = ["16:00", "22:00"];

    function todayDate() {
      return new Date().toISOString().slice(0, 10); // YYYY-MM-DD
    }

    // --- Fetch data from ServiceNow via API ---
    async function load() {
      const eRes = await fetch("/api/caregiver/elderly");
      const cRes = await fetch("/api/caregiver/checkins");

      const eData = await eRes.json();
      const cData = await cRes.json();

      elderlyData = eData.elderly || [];
      checkinLogs = cData.checkins || [];

      populateCaregiverFilter();
      const statusFilter = document.getElementById("filterSelect").value;
      renderDashboard(statusFilter);
    }

    // --- Determine today's status based on ranges ---
    function getTodayStatus(logs, morningRange = MORNING_RANGE, nightRange = NIGHT_RANGE) {
      const today = todayDate();

      // 1️⃣ Check if a "checked in" log exists today
      for (let log of logs) {
        const logDate = log.timestamp || log.sys_created_on;
        if (!logDate) continue;
        if (logDate.slice(0, 10) === today) {
          if ((log.status || "").toLowerCase().includes("checked in")) return "checked";
        }
      }

      // 2️⃣ No log today → check if past end of ranges
      const now = new Date();
      const nowTime = now.getHours().toString().padStart(2, "0") + ":" + now.getMinutes().toString().padStart(2, "0");

      if (nowTime > morningRange[1] && nowTime < nightRange[0]) return "missed-morning";
      if (nowTime > nightRange[1]) return "missed-night";

      return "none"; // Not yet missed
    }

    // --- Update language preference in servicenow ---
    async function updateLanguagePreference(sysId, newLanguage, selectElement, statusElement) {
      // Show updating state
      selectElement.classList.add('updating');
      selectElement.disabled = true;
      if (statusElement) {
        statusElement.textContent = "Updating...";
        statusElement.className = "update-status";
      }

      try {
        console.log(`Updating language for sys_id: ${sysId} to: ${newLanguage}`);

        const response = await fetch(`/api/caregiver/elderly/${sysId}/language`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            language_preference: newLanguage
          })
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Success
          console.log("Language updated successfully:", data);
          selectElement.classList.remove('updating');
          selectElement.classList.add('success');

          if (statusElement) {
            statusElement.textContent = "Updated";
            statusElement.className = "update-status success";
          }

          // Update local data
          const person = elderlyData.find(e => e.id === sysId);
          if (person) {
            person.language_preference = newLanguage;
          }

          // Remove success styling after 3 seconds
          setTimeout(() => {
            selectElement.classList.remove('success');
            if (statusElement) statusElement.textContent = "";
          }, 3000);

        } else {
          // Error
          console.error("Failed to update language:", data);
          selectElement.classList.remove('updating');
          selectElement.classList.add('error');

          if (statusElement) {
            statusElement.textContent = "Failed: " + (data.error || "Unknown error");
            statusElement.className = "update-status error";
          }

          // Remove error styling after 5 seconds
          setTimeout(() => {
            selectElement.classList.remove('error');
            if (statusElement) statusElement.textContent = "";
          }, 5000);
        } 
      } catch (err) {
        console.error("Network error updating language:", err);
        selectElement.classList.remove('updating');
        selectElement.classList.add('error');

        if (statusElement) {
          statusElement.textContent = "Network error";
          statusElement.className = "update-status error";
        }

        setTimeout(() => {
          selectElement.classList.remove('error');
          if (statusElement) statusElement.textContent = "";
        }, 5000);
      } finally {
        selectElement.disabled = false; 
      }
    }

    // --- Create language dropdown ---
    function createLanguageDropdown(person) {
      const currentLang = person.language_preference || "English";
      const languages = ["English", "Chinese", "Malay", "Tamil"];

      const containerId = `lang-container-${person.id}`;

      let html = `<div id="${containerId}">`;
      html += `<select class="language-select" data-sys-id="${person.id}" data-current-lang="${currentLang}">`;
      
      languages.forEach(lang => {
        const selected = lang === currentLang ? 'selected' : '';
        html += `<option value="${lang}" ${selected}>${lang}</option>`;
      });
      
      html += `</select>`;
      html += `<div class="update-status" id="status-${person.id}"></div>`;
      html += `</div>`;
      
      return html;
    }

    // --- Render dashboard ---
    function renderDashboard(statusFilter = "all") {
      const body = document.getElementById("elderlyBody");
      body.innerHTML = "";

      const selectedCaregiver = document.getElementById("caregiverSelect").value;

      let totalCount = 0;
      let checkedCount = 0;
      let missedMorningCount = 0;
      let missedNightCount = 0;

      elderlyData.forEach(person => {
        if (selectedCaregiver !== "all" && person.caregiver !== selectedCaregiver) return;

        const logs = checkinLogs.filter(l => l.elderly_name === person.name);
        const status = getTodayStatus(logs);

        if (statusFilter !== "all" && status !== statusFilter) return;

        totalCount++;

        let displayText = "";
        let cssClass = "";

        if (status === "checked") {
          displayText = "checked in";
          cssClass = "status-ok";
          checkedCount++;
        } else if (status === "missed-morning") {
          displayText = "missed (morning)";
          cssClass = "status-missed";
          missedMorningCount++;
        } else if (status === "missed-night") {
          displayText = "missed (night)";
          cssClass = "status-missed";
          missedNightCount++;
        } else {
          displayText = "no log yet";
          cssClass = "";
        }
        // Decide pause state from the latest log for today
      let isPaused = false;
      const today = todayDate();

      // logs are already filtered for this person; sort by timestamp descending
      const todaysLogs = logs.filter(log => {
        const logDate = (log.timestamp || "").slice(0, 10);
        return logDate === today;
      });

      if (todaysLogs.length > 0) {
        // assuming /api/caregiver/checkins returns newest first, take index 0
        const latest = todaysLogs[0];
        if (latest.is_check_in_paused === true || latest.is_check_in_paused === "true") {
          isPaused = true;
        }
      }

      const buttonLabel = isPaused ? "Active" : "Pause";

        const row = `
        <tr data-status="${status}">
          <td>${person.elderly_username}</td>
          <td>${person.name}</td>
          <td>${person.condition || "-"}</td>
          <td>${createLanguageDropdown(person)}</td>
          <td>${person.caregiver}</td>
          <td class="${cssClass}">${displayText}</td>
          <td>
            <button class="pause-btn"
                    data-name="${person.name}"
                    data-status="${status}">
              ${buttonLabel}
            </button>
          </td>
        </tr>
      `;
        body.insertAdjacentHTML("beforeend", row);
      });

      // Add event listeners to all language dropdowns
      document.querySelectorAll('.language-select').forEach(select => {
        select.addEventListener('change', function(e) {
          const sysId = this.dataset.sysId;
          const newLanguage = this.value;
          const statusElement = document.getElementById(`status-${sysId}`);

          // Confirm change 
          if (confirm(`Change language preference to ${newLanguage}?`)) {
            updateLanguagePreference(sysId, newLanguage, this, statusElement);
          } else {
            // Revert to previous value if cancelled
            this.value = this.dataset.currentLang;
          }
        });
      });

      document.getElementById("totalElderly").textContent = totalCount;
      document.getElementById("checkedInToday").textContent = checkedCount;
      document.getElementById("missedToday").textContent = missedMorningCount + missedNightCount;
    }

    // --- Populate caregiver filter ---
    function populateCaregiverFilter() {
      const select = document.getElementById("caregiverSelect");
      select.innerHTML = '<option value="all">All Caregivers</option>';
      const caregivers = [...new Set(elderlyData.map(e => e.caregiver).filter(Boolean))];
      caregivers.forEach(c => {
        const opt = document.createElement("option");
        opt.value = c;
        opt.textContent = c;
        select.appendChild(opt);
      });
    }

    // --- Event listeners for filters ---
    document.getElementById("filterSelect").addEventListener("change", e => {
      const status = e.target.value;
      renderDashboard(status);
    });

    document.getElementById("caregiverSelect").addEventListener("change", () => {
      const status = document.getElementById("filterSelect").value;
      renderDashboard(status);
    });

     // Pause and Active Button
  document.addEventListener("click", async (e) => {
  if (!e.target.classList.contains("pause-btn")) return;

  const btn = e.target;
  const elderlyName = btn.getAttribute("data-name");
  const currentStatus = btn.getAttribute("data-status");

  const currentlyPauseLabel = btn.textContent.trim().toLowerCase() === "pause";
  const targetState = currentlyPauseLabel ? "paused" : "active";

  try {
    const res = await fetch("/api/caregiver/toggle-pause", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        elderly_name: elderlyName,
        target_state: targetState,
        current_status: currentStatus,
      }),
    });

    const data = await res.json();
    if (!data.success) {
      alert("Failed to update pause status.");
      return;
    }

    // Toggle label immediately
    btn.textContent = currentlyPauseLabel ? "Active" : "Pause";

    // Optionally reload logs as well
    // load();
  } catch (err) {
    console.error("Pause toggle error", err);
    alert("Error talking to server.");
  }
});

    // --- Auto-refresh every minute ---
    load().then(() => {
      setInterval(() => {
        load();
      }, 60000);
    });
  </script>
</body>

</html> 
