<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Senior Connect - Caregiver Dashboard</title>
  <style>
    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 25px;
      color: #002d62;
    }

    /* --- Caregiver Profile --- */
    section.profile {
      background: #fff;
      padding: 20px;
      margin-bottom: 25px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    section.profile h2 {
      margin-top: 0;
      color: #002d62;
    }

    section.profile p {
      margin: 5px 0;
    }

    /* --- Summary Cards --- */
    #summaryCards {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }

    .card {
      flex: 1;
      background: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: left;
    }

    .card h2 {
      margin: 5px 0;
    }

    /* --- Elderly Table --- */
    #elderlyTable {
      width: 100%;
      background: white;
      border-radius: 10px;
      border-collapse: collapse;
      overflow: hidden;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    #elderlyTable th,
    #elderlyTable td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    #elderlyTable th {
      background: #002d62;
      color: white;
    }

    tr:last-child td {
      border-bottom: none;
    }

    .status-ok {
      color: green;
      font-weight: bold;
    }

    .status-missed {
      color: red;
      font-weight: bold;
    }

    /* --- Filters --- */
    #filterRow {
      margin: 15px 0;
      display: flex;
      justify-content: flex-end;
      gap: 15px;
    }

    .language-select {
      padding: 6px 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background: white;
      cursor: pointer;
      font-size: 14px;
      transition: all 0.3s;
    }

    .language-select:hover {
      border-color: #002d62;
    }

    .language-select:focus {
      outline: none;
      border-color: #002d62;
      box-shadow: 0 0 5px rgba(0, 45, 98, 0.3);
    }

    .language-select.updating {
      background: #f0f0f0;
      cursor: wait;
    }

    .language-select.success {
      border-color: green;
      background: #f0f0f0;
    }

    .language-select.error {
      border-color: red;
      background: #fff0f0;
    }

    .update-status {
      font-size: 12px;
      margin-top: 4px;
      font-style: italic;
    }

    .update-status.success {
      color: green;
    }

    .update-status.error {
      color: red;
    }

    /* --- Pause Button --- */
    .pause-btn {
      padding: 6px 16px;
      border-radius: 999px;
      border: 3px solid transparent;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .pause-btn.active {
      background: #e6f0ff;
      color: #0055cc;
      border-color: #0055cc;
      font-weight: bold;
    }

    .pause-btn.inactive {
      background: #ffe6e6;
      color: #cc0000;
      border-color: #cc0000;
      font-weight: bold;
    }

    .pause-btn:hover {
      box-shadow: 0 0 0 2px rgba(3, 102, 214, 0.15);
    }

    .pause-btn.inactive:hover {
      box-shadow: 0 0 0 2px rgba(176, 0, 32, 0.15);
    }
  </style>
</head>

<body>
  <h1>Caregiver Dashboard</h1>

  <!-- Caregiver Profile Section -->
  <div class="side-by-side">
  <section class="profile">
    <h2>My Profile</h2>
    <p><strong>Name:</strong> <%= caregiver.contact_name || 'N/A' %></p>
    <p><strong>Username:</strong> <%= caregiver.c_username || 'N/A' %></p>
    <p><strong>Phone:</strong> <%= caregiver.contact_phone || 'N/A' %></p>
    <p><strong>Email:</strong> <%= caregiver.contact_email || 'N/A' %></p>
    <p><strong>Address:</strong> <%= caregiver.address || 'N/A' %></p>
    <button><a href="/caregiver">Edit Profile</a></button>
  </section>
  </div>

  <div class="side-by-side"></div>
  <!-- Summary Cards -->
  <div id="summaryCards">
    <div class="card">
      <h2 id="totalElderly">0</h2>
      <p>Elderlies Under My Care</p>
    </div>
    <div class="card">
      <h2 id="checkedInToday">0</h2>
      <p>Checked In Today</p>
    </div>
    <div class="card">
      <h2 id="missedToday">0</h2>
      <p>Missed Today</p>
    </div>
  </div>
</div>

  <!-- Filters -->
  <div id="filterRow">
    <span>Senior:
      <select id="filterSelect">
        <option value="all">All Seniors</option>
        <option value="checked">Checked In Today</option>
        <option value="missed-morning">Missed (Morning)</option>
        <option value="missed-night">Missed (Night)</option>
      </select>
    </span>
  </div>

  <!-- Elderly Table -->
  <table id="elderlyTable">
    <thead>
      <tr>
        <th>Username</th>
        <th>Name</th>
        <th>Condition</th>
        <th>Language Preference</th>
        <th>Check-In Status</th>
        <th>Active/Inactive</th>
      </tr>
    </thead>
    <tbody id="elderlyBody">
      <!-- Filled by JS -->
    </tbody>
  </table>

  <script>
    let elderlyData = [];
    let checkinLogs = [];

    const MORNING_RANGE = ["06:00", "12:00"];
    const NIGHT_RANGE = ["16:00", "22:00"];

    function todayDate() {
      return new Date().toISOString().slice(0, 10);
    }

    async function load() {
      const eRes = await fetch("/api/caregiver/elderly");
      const cRes = await fetch("/api/caregiver/checkins");

      const eData = await eRes.json();
      const cData = await cRes.json();

      elderlyData = eData.elderly || [];
      checkinLogs = cData.checkins || [];

      renderDashboard(document.getElementById("filterSelect").value);
    }

    function getTodayStatus(logs, morningRange = MORNING_RANGE, nightRange = NIGHT_RANGE) {
      const today = todayDate();

      for (let log of logs) {
        const logDate = log.timestamp || log.sys_created_on;
        if (!logDate) continue;
        if (logDate.slice(0, 10) === today) {
          if ((log.status || "").toLowerCase().includes("checked in")) return "checked";
        }
      }

      const now = new Date();
      const nowTime = now.getHours().toString().padStart(2, "0") + ":" + now.getMinutes().toString().padStart(2, "0");

      if (nowTime > morningRange[1] && nowTime < nightRange[0]) return "missed-morning";
      if (nowTime > nightRange[1]) return "missed-night";

      return "none";
    }

    async function updateLanguagePreference(sysId, newLanguage, selectElement, statusElement) {
      selectElement.classList.add('updating');
      selectElement.disabled = true;
      if (statusElement) {
        statusElement.textContent = "Updating...";
        statusElement.className = "update-status";
      }

      try {
        const response = await fetch(`/api/caregiver/elderly/${sysId}/language`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ language_preference: newLanguage })
        });

        const data = await response.json();

        if (response.ok && data.success) {
          selectElement.classList.remove('updating');
          selectElement.classList.add('success');
          if (statusElement) {
            statusElement.textContent = "Updated";
            statusElement.className = "update-status success";
          }
          const person = elderlyData.find(e => e.id === sysId);
          if (person) person.language_preference = newLanguage;
          setTimeout(() => { selectElement.classList.remove('success'); if (statusElement) statusElement.textContent = ""; }, 3000);
        } else {
          selectElement.classList.remove('updating');
          selectElement.classList.add('error');
          if (statusElement) {
            statusElement.textContent = "Failed: " + (data.error || "Unknown error");
            statusElement.className = "update-status error";
          }
          setTimeout(() => { selectElement.classList.remove('error'); if (statusElement) statusElement.textContent = ""; }, 5000);
        }
      } catch (err) {
        console.error(err);
        selectElement.classList.remove('updating');
        selectElement.classList.add('error');
        if (statusElement) {
          statusElement.textContent = "Network error";
          statusElement.className = "update-status error";
        }
        setTimeout(() => { selectElement.classList.remove('error'); if (statusElement) statusElement.textContent = ""; }, 5000);
      } finally {
        selectElement.disabled = false;
      }
    }

    function createLanguageDropdown(person) {
      const currentLang = person.language_preference || "English";
      const languages = ["English", "Chinese", "Malay", "Tamil"];
      const containerId = `lang-container-${person.id}`;
      let html = `<div id="${containerId}"><select class="language-select" data-sys-id="${person.id}" data-current-lang="${currentLang}">`;
      languages.forEach(lang => {
        html += `<option value="${lang}" ${lang === currentLang ? 'selected' : ''}>${lang}</option>`;
      });
      html += `</select><div class="update-status" id="status-${person.id}"></div></div>`;
      return html;
    }

    function renderDashboard(statusFilter = "all") {
      const body = document.getElementById("elderlyBody");
      body.innerHTML = "";

      let totalCount = 0;
      let checkedCount = 0;
      let missedMorningCount = 0;
      let missedNightCount = 0;

      elderlyData.forEach(person => {
        const logs = checkinLogs.filter(l => l.elderly_name === person.name);
        const status = getTodayStatus(logs);

        if (statusFilter !== "all" && status !== statusFilter) return;

        totalCount++;

        let displayText = "";
        let cssClass = "";

        if (status === "checked") {
          displayText = "checked in";
          cssClass = "status-ok";
          checkedCount++;
        } else if (status === "missed-morning") {
          displayText = "missed (morning)";
          cssClass = "status-missed";
          missedMorningCount++;
        } else if (status === "missed-night") {
          displayText = "missed (night)";
          cssClass = "status-missed";
          missedNightCount++;
        } else displayText = "no log yet";

        let isPaused = false;
        const today = todayDate();
        const todaysLogs = logs.filter(log => (log.timestamp || "").slice(0, 10) === today);
        if (todaysLogs.length > 0 && (todaysLogs[0].is_check_in_paused === true || todaysLogs[0].is_check_in_paused === "true")) isPaused = true;

        const buttonLabel = isPaused ? "Inactive" : "Active";
        const pauseClass = isPaused ? "pause-btn inactive" : "pause-btn active";

        const row = `
          <tr data-status="${status}">
            <td>${person.elderly_username}</td>
            <td>${person.name}</td>
            <td>${person.condition || "-"}</td>
            <td>${createLanguageDropdown(person)}</td>
            <td class="${cssClass}">${displayText}</td>
            <td><button class="${pauseClass}" data-name="${person.name}" data-status="${status}">${buttonLabel}</button></td>
          </tr>
        `;
        body.insertAdjacentHTML("beforeend", row);
      });

      document.querySelectorAll('.language-select').forEach(select => {
        select.addEventListener('change', function () {
          const sysId = this.dataset.sysId;
          const newLanguage = this.value;
          const statusElement = document.getElementById(`status-${sysId}`);
          if (confirm(`Change language preference to ${newLanguage}?`)) {
            updateLanguagePreference(sysId, newLanguage, this, statusElement);
          } else this.value = this.dataset.currentLang;
        });
      });

      document.getElementById("totalElderly").textContent = totalCount;
      document.getElementById("checkedInToday").textContent = checkedCount;
      document.getElementById("missedToday").textContent = missedMorningCount + missedNightCount;
    }

    document.getElementById("filterSelect").addEventListener("change", e => renderDashboard(e.target.value));

    document.addEventListener("click", async (e) => {
      if (!e.target.classList.contains("pause-btn")) return;
      const btn = e.target;
      const elderlyName = btn.getAttribute("data-name");
      const currentlyActiveLabel = btn.textContent.trim().toLowerCase() === "active";
      const targetState = currentlyActiveLabel ? "paused" : "active";
      let absenceReason = "";

      if (currentlyActiveLabel) {
        while (true) {
          const input = prompt("Please enter reason for inactivity:");
          if (input === null) return;
          absenceReason = input.trim();
          if (absenceReason) break;
          alert("Reason cannot be blank. Please enter a reason.");
        }
      }

      try {
        const res = await fetch("/api/caregiver/toggle-pause", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ elderly_name: elderlyName, target_state: targetState, absence_reason })
        });
        const data = await res.json();
        if (!data.success) { alert("Failed to update pause status."); return; }
        btn.textContent = currentlyActiveLabel ? "Inactive" : "Active";
        btn.classList.toggle("active");
        btn.classList.toggle("inactive");
      } catch (err) {
        console.error(err);
        alert("Error talking to server.");
      }
    });

    load().then(() => setInterval(load, 60000));
  </script>
</body>
</html>
