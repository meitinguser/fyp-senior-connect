<!DOCTYPE html>
<html>
<head>
  <title>My Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f9;
      padding: 30px;
    }

    .card {
      max-width: 500px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    label {
      font-weight: bold;
    }

    input {
      width: 100%;
      padding: 10px;
      padding-right: 20px;
      margin: 8px 8px 8px 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    button {
      width: 100%;
      padding: 10px;
      background: #002d62;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background: #00408f;
    }

    #status {
      text-align: center;
      margin-top: 15px;
      font-weight: bold;
    }

    .success { color: green; }
    .error { color: red; }
  </style>
</head>
<body>

  <div class="card">
    <h1>My Profile: <%= user.contact_name %></h1>

    <form id="profileForm">
      <label>Email</label>
        <input type="email" name="contact_email"
            value="<%= user.contact_email || '' %>" required>

        <label>Phone Number</label>
        <input type="text" name="contact_phone"
            value="<%= user.contact_phone || '' %>" required>

        <label>Address</label>
        <input type="text" name="contact_address"
            value="<%= user.contact_address || '' %>" required>


      <button type="submit">Save Changes</button>
      <div id="status"></div>

      <a href="/caregiver"><- Back to Dashboard</a>
    </form>

    
    <h3>Change Password</h3>
        <form id="passwordForm">
        <label for="currentPassword">Current Password:</label>
        <input type="password" id="currentPassword" name="currentPassword" required>
        <br>

        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <br>

        <label for="confirmPassword">Confirm New Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
        <br>

        <button type="submit">Update Password</button>
        </form>

    <div id="passwordStatus"></div>
        
  </div>

  <script>
    document.getElementById("profileForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = Object.fromEntries(new FormData(e.target));

      const res = await fetch("/api/caregiver/profile", {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
      });

      const data = await res.json();
      const status = document.getElementById("status");

      if (data.success) {
        status.textContent = "Profile updated successfully";
        status.className = "success";
      } else {
        status.textContent = "Failed to update profile";
        status.className = "error";
      }
    });
    
    
document.getElementById("passwordForm").addEventListener("submit", async (e) => {
  e.preventDefault();

  const currentPassword = document.getElementById("currentPassword").value;
  const newPassword = document.getElementById("newPassword").value;
  const confirmPassword = document.getElementById("confirmPassword").value;
  const statusEl = document.getElementById("passwordStatus");

  statusEl.textContent = "Updating...";
  statusEl.style.color = "black";

  try {
    const res = await fetch("/api/update-password", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ currentPassword, newPassword, confirmPassword })
    });

    const data = await res.json();
    if (data.success) {
      statusEl.textContent = data.message;
      statusEl.style.color = "green";
      // Clear form
      document.getElementById("passwordForm").reset();
    } else {
      statusEl.textContent = data.error || "Failed to update password.";
      statusEl.style.color = "red";
    }
  } catch (err) {
    console.error("Password update error:", err);
    statusEl.textContent = "Network error.";
    statusEl.style.color = "red";
  }
});


  </script>

</body>
</html>
